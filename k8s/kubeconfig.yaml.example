# EXAMPLE: Petrosa MicroK8s Cluster Configuration
# DO NOT commit real credentials to version control
#
# Setup Instructions:
# 1. For local kubectl: Use centralized config at ~/.kube/config
# 2. Context name: "petrosa" (after merging to ~/.kube/config)
# 3. To generate this file from MicroK8s:
#    microk8s config > k8s/kubeconfig.yaml
#
# For deployment commands, reference the centralized config:
#    kubectl --context=petrosa get pods -n petrosa-apps
#
# See docs/REPOSITORY_SETUP_GUIDE.md for complete instructions

apiVersion: v1
clusters:
- cluster:
    certificate-authority-data: <BASE64_ENCODED_CA_CERT>
    server: https://<MICROK8S_IP>:16443
  name: microk8s-cluster
contexts:
- context:
    cluster: microk8s-cluster
    user: admin
  name: microk8s
current-context: microk8s
kind: Config
preferences: {}
users:
- name: admin
  user:
    client-certificate-data: <BASE64_ENCODED_CLIENT_CERT>
    client-key-data: <BASE64_ENCODED_CLIENT_KEY>



